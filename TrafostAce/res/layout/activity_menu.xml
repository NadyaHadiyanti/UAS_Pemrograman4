<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >
    
    <Button
        android:id="@+id/buttonMakan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtKategori"
        android:layout_alignRight="@+id/txtKategori"
        android:layout_below="@+id/txtKategori"
        android:layout_marginTop="24dp"
        android:text="Makanan" />

    <Button
        android:id="@+id/buttonMinum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonMakan"
        android:layout_alignRight="@+id/buttonMakan"
        android:layout_below="@+id/buttonMakan"
        android:layout_marginTop="18dp"
        android:text="Minuman" />

    <Button
        android:id="@+id/buttonDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonMinum"
        android:layout_alignRight="@+id/buttonMinum"
        android:layout_below="@+id/buttonMinum"
        android:layout_marginTop="15dp"
        android:text="Detail Pesan" />

    <TextView
        android:id="@+id/txtKategori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:fontFamily="sans-serif-condensed"
        android:textSize="16pt"
        android:text="Kategori Menu"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>